{
  "name": "Nodeyard",
  "version": "0.1.0",
  "description": "Development foundation of Node.js application",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/AKIRA-MIYAKE/Nodeyard.git"
  },
  "scripts": {
    "start": "node ./bin/www",
    "postinstall": "node ./scripts/postinstall",
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "build:server": "npm run build:server:js && npm run build:server:views",
    "build:server:js": "babel src --out-dir dist --source-maps --ignore public,'**/*.spec.js'",
    "build:server:views": "copyfiles -u 2 './src/views/**/*' ./dist/views",
    "build:client": "webpack",
    "serve": "npm run watch:server & npm run serve:client & npm run nodemon",
    "serve:client": "npm run watch:client & npm run webpack-dev-server",
    "watch": "npm run watch:server & npm run watch:client",
    "watch:server": "npm run watch:server:js & npm run watch:server:views",
    "watch:server:js": "npm run build:server:js -- --watch",
    "watch:server:views": "watch 'npm run build:server:views' ./src/views",
    "watch:client": "npm run build:client -- --watch",
    "dev": "npm run lint:watch & npm run test:watch",
    "check": "npm run lint && npm run test",
    "lint": "eslint --ignore-pattern '**/*\\.spec.js' './src/**/*.{js,jsx}'; exit 0",
    "lint:watch": "watch 'npm run lint' ./src",
    "test": "mocha --compilers js:espower-babel/guess './src/**/*\\.spec.js'; exit 0",
    "test:watch": "mocha --compilers js:espower-babel/guess --watch './src/**/*\\.spec.js'",
    "styleguide": "node ./scripts/styleguide",
    "jsdoc": "jsdoc --recurse ./src --destination ./jsdoc",
    "nodemon": "nodemon --watch ./dist",
    "webpack-dev-server": "webpack-dev-server --host 0.0.0.0"
  },
  "dependencies": {
    "babel-cli": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "body-parser": "^1.15.1",
    "classnames": "^2.2.5",
    "config": "^1.20.1",
    "cookie-parser": "^1.4.1",
    "copyfiles": "^0.2.1",
    "css-loader": "^0.23.1",
    "cssnano": "^3.6.2",
    "debug": "^2.2.0",
    "es6-promise": "^3.1.2",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "http-errors": "^1.4.0",
    "isomorphic-fetch": "^2.2.1",
    "log4js": "^0.6.36",
    "node-sass": "^3.7.0",
    "passport": "^0.3.2",
    "postcss-cssnext": "^2.5.2",
    "postcss-extend": "^1.0.1",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.9.1",
    "postcss-url": "^5.1.2",
    "pug": "^2.0.0-alpha7",
    "rigging": "https://github.com/AKIRA-MIYAKE/Rigging/tarball/master",
    "rimraf": "^2.5.2",
    "serve-favicon": "^2.3.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.0"
  },
  "devDependencies": {
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.7.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.1.1",
    "espower-babel": "^4.0.3",
    "jsdoc": "^3.4.0",
    "mdcss": "^1.5.2",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.2",
    "power-assert": "^1.4.1",
    "watch": "^0.18.0",
    "webpack-dev-server": "^1.14.1"
  }
}
